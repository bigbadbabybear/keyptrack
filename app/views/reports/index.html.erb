<!-- GROUP_BY -->
<div id="reports">
<% @reports_by_game.each do |game, reports| %>
	<h2><%= game %></h2>
	<% for report in reports %>
	<div class="report">
		<p class="report-key"><%= report.report_key %></p>
		<p class="report-name"><%= report.user.name %></p>
		<p class="report-status"><%= report.status.status %></p>
		<p class="report-resolution"><%= report.resolution.resolution %></p>
		<p><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></p>
	</div>
	<% end %>
<% end %>
</div>
