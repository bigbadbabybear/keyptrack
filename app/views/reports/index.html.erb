<h1>Reports</h1>

<%= form_tag('/reports/search') do %>
	<%= text_field_tag :report_search %>
	<%= submit_tag 'Search' %>
<% end %>

<p><%= link_to 'New Report', new_report_path %></p>

<%= will_paginate @reports %>
<table id="reports" width="100%">
	<thead>
		<th>Key</th>
		<th>Reporter</th>
		<th>Status</th>
		<th>Resolution</th>
		<th>Delete?</th>
	</thead>
	<tbody>
	<% @reports.each do |report| %>
		<tr class="report">
			<td class="report-key"><%= report.game.title rescue "" %> / <%= link_to report.report_key.upcase, edit_report_path(report) %></td>
			<td class="report-name"><%= report.user.name %></td>
			<td class="report-status"><%= report.status.status %></td>
			<td class="report-resolution"><%= report.resolution.resolution %></td>
   	 	<td><%= link_to 'Destroy', report, method: :delete %></td>
		</tr>
	<% end %>
	</tbody>
</table>
<%= will_paginate @reports %>

<p><%= link_to 'New Report', new_report_path %></p>
