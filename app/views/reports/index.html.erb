<h1>Listing reports</h1>

<table>
  <tr>
    <th>User</th>
    <th>Game</th>
    <th>Platform</th>
    <th>Report number</th>
    <th>Status</th>
    <th>Resolution</th>
    <th>Fix commit</th>
    <th>Fix confirm</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.user %></td>
    <td><%= report.game %></td>
    <td><%= report.platform %></td>
    <td><%= report.report_number %></td>
    <td><%= report.status %></td>
    <td><%= report.resolution %></td>
    <td><%= report.fix_commit %></td>
    <td><%= report.fix_confirm %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

